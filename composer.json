{
    "name": "intraxia/jaxion",
    "description": "A WordPress plugin framework for modern WordPress development.",
    "require": {
        "php" : ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.7.7",
        "mockery/mockery": "~0.9.4",
        "10up/wp_mock": "0.1.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "mAAdhaTTah",
            "email": "jamesorodig@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Intraxia\\Jaxion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Intraxia\\Jaxion\\Test\\": "tests"
        }
    },
    "scripts": {
        "sniff": "phpcs -p src/ --standard=PSR2 --report=summary",
        "clean": "phpcbf -p src/ --standard=PSR2 --report=summary",
        "test": "phpunit"
    }
}
